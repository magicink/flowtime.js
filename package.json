{
  "name": "btc-flowtime",
  "version": "2.0.0",
  "description": "A fork of Marco Lago's Flowtime.js",
  "homepage": "https://github.com/marcolago/flowtime.js",
  "bugs": "https://github.com/marcolago/flowtime.js/issues",
  "author": {
    "name": "Marco Lago",
    "email": "marcolago@marcolago.com",
    "url": "https://absolide.tumblr.com/"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup --config ./rollup.config.js",
    "format": "npx sort-package-json && prettier --write \"**/*.{js,json,md}\"",
    "prepare": "npx husky install",
    "postprepare": "npx husky add .husky/pre-commit \"npm test && npm run format && git add .\"",
    "preinstall": "npx rimraf .husky/pre-commit",
    "postinstall": "npm rebuild node-sass",
    "test": "jest"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.2",
    "@babel/plugin-syntax-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-syntax-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-arrow-functions": "^7.13.0",
    "@babel/plugin-transform-block-scoping": "^7.14.2",
    "@babel/plugin-transform-classes": "^7.14.2",
    "@babel/plugin-transform-destructuring": "^7.13.17",
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@babel/plugin-transform-parameters": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/plugin-transform-template-literals": "^7.13.0",
    "@babel/preset-env": "^7.14.2",
    "@babel/runtime": "^7.14.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/cli": "^5.1.11",
    "@storybook/react": "^6.1.21",
    "babel-jest": "^26.6.3",
    "hosted-git-info": ">=3.0.8",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lodash": ">=4.17.21",
    "node-sass": "^6.0.0",
    "prettier": "^2.3.0",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2"
  }
}
